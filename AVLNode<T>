package project212;

// AVL Node class
public class AVLNode<T> {
    public int key;              // Key stored in this node
    public T data;               // Data stored in this node
    public Balance bal;          // Balance factor (+1, 0, -1)
    public AVLNode<T> left;      // Left child
    public AVLNode<T> right;     // Right child

    public AVLNode(int key, T data) {
        this.key = key;          // Set key
        this.data = data;        // Set data
        bal = Balance.Zero;      // New node is balanced
        left = right = null;     // Children start as null
    }
}
